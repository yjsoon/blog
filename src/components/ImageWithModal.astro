---
import JsxImageWithModal from "./ImageWithModal.jsx";
import X from "./icons/X.astro";

export type Props = {
  src: string;
  alt: string;
  title?: string;
  class?: string;
};

const { src, alt, title, class: className } = Astro.props;
---

<JsxImageWithModal client:visible src={src} alt={alt} title={title} className={className}>
  <X slot="closeIcon" />
</JsxImageWithModal>
